// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          Int           @default(autoincrement()) @id @unique
  nome        String
  sobrenome   String
  username    String 
  imagem      String
  bio         String
  nasc        String
  email       String        @unique
  senha       String
  seguidores  Seguidores[]
  seguindo    Seguindo[]
  tweets      Tweet[]
  favoritos   Favoritos[]
  created_at  DateTime      @default(now())
  modify_at   DateTime      @default(now())
}

model Categoria {
  id          Int            @default(autoincrement()) @id @unique
  nome        String
  created_at  DateTime       @default(now())
  tweets      CategoriaDoTweet[]
}

model Tweet {
  id          Int            @default(autoincrement()) @id @unique
  texto       String
  created_at  DateTime       @default(now())
  autor       Usuario        @relation(fields: [usuarioid], references: [id])
  usuarioid   Int
  categoria   CategoriaDoTweet[]
  favoritos   Favoritos[]
}

model CategoriaDoTweet {
  tweet     Tweet         @relation(fields: [tweetid], references: [id])
  tweetid   Int
  categoria Categoria     @relation(fields: [categoriaid], references: [id])
  categoriaid Int

  @@id([categoriaid, tweetid])
}

model Favoritos {
   tweet     Tweet         @relation(fields: [tweetid], references: [id])
   tweetid   Int   
   usuario     Usuario       @relation(fields: [usuarioid], references: [id])
   usuarioid   Int

   @@id([usuarioid, tweetid])
}

model Seguindo {
  id          Int           @default(autoincrement()) @id @unique
  usuarioid   Usuario       @relation(fields: [idSeguindo], references: [id])
  idSeguindo  Int
  created_at  DateTime       @default(now())
}

model Seguidores {
  id          Int           @default(autoincrement()) @id @unique
  usuarioid   Usuario       @relation(fields: [idSeguidor], references: [id])
  idSeguidor  Int
  created_at  DateTime       @default(now())
}
